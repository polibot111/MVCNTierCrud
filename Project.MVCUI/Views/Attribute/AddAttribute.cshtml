@model ProductVM
@{
    ViewBag.Title = "AddAttribute";
}

<h2>Add New Attribute</h2>
@using (Html.BeginForm("AddAttribute","Attribute",FormMethod.Post))
{
    <div>
        @Html.TextBoxFor(x=> x.PAttribute.Name, new { placeholder ="attribute name"})

    </div>
    <div>
        <button> Add Attribute </button>
    </div>
    
}
<div class="btn btn-danger">
    @Html.ActionLink("Next", "AddAttributeToProduct", "ProductAttribute")
</div>
